{% extends 'base.html.twig' %}

{% block title %}Khalif{% endblock %}

{% block body %}
    {% include 'base/header.html.twig' with {header} %}
    <div class="container-fluid">
        <a
                class="img-fluid"
                href="#"
                style="height: 1050px"
                alt="&#34;ANTIHYPE HOME&#34; COLLECTION"
        ><img
                    src="https://thumb.tildacdn.com/tild3464-3565-4135-b430-323565616130/-/format/webp/1H1A534545560-Edit_1.png"
                    alt=""
            /></a>

        <a
                class="img-fluid"
                href="#"
                style="height: 661px"
                alt="	&#34;LIDA&#34; COLLECTION"
        ><img src="https://ie.wampi.ru/2022/07/01/_1_1-1.png" alt=""
            /></a>
    </div>
    <div class="container">
        {% for section in body %}
            <p class="fs-3 text-center pt-3 pb-3">{{ section.name }}</p>
            <div class="wrapper">
                {% for item in section.products %}
                    <div class="photo">
                        <a href="product/{{ item.id }}">
                            <div
                                    class="home-collection-img"
                                    style="background-image: url('upload/pictures/{{ item.picture }}');"></div>

                            <div class="photo-text name" data-toggle="tooltip"
                                 title="{{ item.name }}">{{ item.name }}</div>
                            <div class="photo-text price" data-toggle="tooltip"
                                 title="{{ item.price ~ ' руб.' }}">{{ item.price ~ ' руб.' }}</div>
                        </a>
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    </div>
    {% include 'base/footer.html.twig' %}
{% endblock %}
