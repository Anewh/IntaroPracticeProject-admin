{% extends 'base.html.twig' %}

{% block title %}Khalif{% endblock %}

{% block body %}
    {% include 'base/header.html.twig' with {header} %}
    <div class="container-fluid">
        <a
                class="img-fluid"
                href="#"
                alt="&#34;ANTIHYPE HOME&#34; COLLECTION"
        >
            <div role="img" class="img-of-collections" style="background-image: url({{ asset('build/images/zamai.3db0391a.png') }});"></div>
        </a>

        <a
                class="img-fluid"
                href="#"
                alt="&#34;LIDA&#34; COLLECTION"
        >            <div role="img" class="img-of-collections" style="background-image: url({{ asset('build/images/lida.86dfcd5c.webp') }});"></div> </a>
    </div>
    <div class="container">
            <p class="fs-3 text-center pt-3 pb-3">Случайная подборка</p>
            <div class="wrapper">
                {% for item in body %}
                    <div class="photo">
                        <a href="{{ path('app_product', {'id': item.id}) }}">
                            <div
                                    class="home-collection-img"
                                    style="background-image: url('upload/pictures/{{ item.picture }}');"></div>

                            <div class="photo-text name" data-toggle="tooltip"
                                 title="{{ item.name }}">{{ item.name }}</div>
                            <div class="photo-text price" data-toggle="tooltip"
                                 title="{{ item.price ~ ' руб.' }}">{{ item.price ~ ' руб.' }}</div>
                        </a>
                    </div>
                {% endfor %}
            </div>
    </div>



    {% include 'base/footer.html.twig' %}
{% endblock %}
